<h2><%= @team.name %></h2>

<ul>
  <% if @team.worldcup_appearance.nil? %>
    <li>World Cup Appearance: No data available</li>
  <% else %>
    <li>World Cup Appearance: <%= @team.worldcup_appearance %></li>
  <% end %>

  <% if @team.worldcup_champions.nil? %>
    <li>World Cup Champions: No data available</li>
  <% else %>
    <li>World Cup Champions: <%= @team.worldcup_champions %></li>
  <% end %>

  <% if @team.flag.present? %>
    <%= image_tag @team.flag, :class => 'feature'%>
  <% end %>
</ul>

<div class="team_players">
  <% @team.players.each do |player| %>
    <%= link_to image_tag(player.image, :class => 'thumb'), player_path(player.id) %>
  <% end %>
</div>

<div class="controls">
  <%= link_to 'Edit team', edit_team_path(@team) %>
  <%= link_to 'Delete team', @team, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
