<%= form_for @player do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :family %>
  <%= f.text_field :family %>

  <%= f.label :national_goals %>
  <%= f.number_field :national_goals %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.label :team_id %>
  <%= f.select :team_id, Team.pluck(:name, :id), :include_blank => true %>

  <%= f.submit %>
  <% end %>
