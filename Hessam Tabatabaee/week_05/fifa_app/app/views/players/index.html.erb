<h1>All Players</h1>

<% @players.each do |player| %>
  <%= image_tag player.image, :class => 'thumb' if player.image.present? %>

  <ul>
    <li>Name: <%= link_to (player.name + ' ' + player.family), player_path(player.id) %></li>
    <% if player.national_goals != nil %>
    <li>National Goals: <%= player.national_goals %></li>
    <% end %>
  </ul>
<% end %>
